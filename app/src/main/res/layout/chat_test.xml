<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/chat_white_bg"
        android:paddingTop="8dp"
        android:id="@+id/tag_test_lay"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="8dp"

            android:id="@+id/course_tag_icon"
            android:src="@drawable/test_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/test_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            android:text="作业测评"
            android:layout_toRightOf="@+id/course_tag_icon"
            android:textColor="@color/blue"/>
    </LinearLayout>
    <TextView
        android:id="@+id/test_title"
        android:layout_below="@+id/tag_test_lay"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textSize="@dimen/text_size_16"
        android:text="第一章，文学"
        android:textColor="@color/text_default_color"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/line"
        android:layout_below="@+id/test_title"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_line_color">

    </View>
    <TextView
        android:id="@+id/dotest"
        android:layout_below="@+id/line"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textSize="@dimen/text_size14"
        android:text="开始测试"
        android:background="@drawable/common_item_onclick_selector"
        android:drawableRight="@drawable/find_arrow_right"
        android:textColor="@color/text_default_color"
        android:layout_height="wrap_content"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="18dp"
    android:paddingLeft="18dp" >

    <TextView
        android:id="@+id/section_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="第二章测试"
        android:textColor="@color/common_dark_text_color"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/left_icon_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/day_medal_list" />

        <TextView
            android:id="@+id/test_list_star_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/left_icon_test"
            android:layout_alignTop="@+id/left_icon_test"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/left_icon_test"
            android:gravity="center"
            android:text="12"
            android:textColor="@color/common_light_text_color" />

        <ImageView
            android:id="@+id/to_do_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/do_test" />
    </RelativeLayout>

    <cn.vko.ring.common.widget.LineView
        android:layout_marginTop="10dp"
        android:id="@+id/item_bottom_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:visibility="gone" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_main_view"
    android:orientation="vertical"
    android:padding="20dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp" >

        <ImageView
            android:id="@+id/iv_left_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="10dp"
            android:visibility="gone"
            android:background="@drawable/common_audio_left" />

        <TextView
            android:id="@+id/tv_audio_lenth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="点击录音"
            android:textColor="@color/text_black_color"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_right_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
             android:visibility="gone"
             android:layout_gravity="center_vertical"
            android:background="@drawable/common_audio_right" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_record"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_audio_bg"
        android:padding="5dp"
        android:src="@drawable/shape_audio_normal" />

</LinearLayout>
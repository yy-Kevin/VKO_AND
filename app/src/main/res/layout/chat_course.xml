<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tag_course_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/course_tag_icon"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/im_video_small" />

        <TextView
            android:id="@+id/course_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/course_tag_icon"
            android:text="课程预习"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/courseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tag_course_lay">
        <ImageView
            android:id="@+id/courseImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:src="@drawable/course_task_default1" />

        <TextView
            android:id="@+id/courseTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/courseImg"
            android:lineSpacingMultiplier="1.3"
            android:textColor="@color/text_black_color"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/courseSummary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/courseTitle"
            android:layout_below="@+id/courseTitle"
            android:layout_marginTop="8dp"
            android:background="@drawable/chat_white_bg"
            android:maxLines="2"
            android:minLines="2"
            android:textColor="@color/text_gray_color"
            android:textSize="@dimen/text_size_12" />
    </RelativeLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_raduis"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:src="@drawable/head_gratuity" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="需要消嫠600Vb"
        android:textColor="@color/text_black_color"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/layout_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_two_first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_gray_btn"
            android:gravity="center_horizontal"
            android:padding="10dip"
            android:text="马上开通"
            android:textColor="#006FFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_two_second"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/selector_light_blue_button"
            android:gravity="center_horizontal"
            android:padding="10dip"
            android:text="马上开通"
            android:textColor="#006FFF"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:visibility="visible" >

        <TextView
            android:id="@+id/tv_three_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_gray_btn"
            android:gravity="center_horizontal"
            android:padding="10dip"
            android:text="马上开通"
            android:textColor="#006FFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_three_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_light_blue_button"
            android:gravity="center_horizontal"
            android:padding="10dip"
            android:text="马上开通"
            android:textColor="#006FFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_three_third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_red_button"
            android:gravity="center_horizontal"
            android:padding="10dip"
            android:text="马上开通"
            android:textColor="#006FFF"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/selector_light_blue_button"
        android:gravity="center_horizontal"
        android:padding="10dip"
        android:visibility="gone"
        android:text="马上开通"
        android:textColor="#006FFF"
        android:textSize="16sp" />

</LinearLayout>
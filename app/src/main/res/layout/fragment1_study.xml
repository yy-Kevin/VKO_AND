<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main_view"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_view_head"
            />
        <ImageView
            android:id="@+id/custom"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:padding="2dp"
            android:visibility="gone"
            android:src="@drawable/custom_service" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <cn.vko.ring.common.widget.SimpleViewPagerIndicator
            android:id="@+id/layout_indicator1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffffff" />

        <cn.vko.ring.common.widget.NoScrollViewPager
            android:id="@+id/my_viewpager1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        </cn.vko.ring.common.widget.NoScrollViewPager>
    </LinearLayout>

</LinearLayout>